{
  "name": "desktop-buddy",
  "version": "1.0.0",
  "description": "A fun interactive physics ball for your desktop",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder --win --mac --linux",
    "generate-icon": "node scripts/convert-svg-to-icon.js"
  },
  "keywords": [
    "desktop",
    "physics",
    "ball",
    "widget"
  ],
  "author": {
    "name": "Sam Kleespies",
    "email": "sam.kleespies@gmail.com"
  },
  "license": "ISC",
  "build": {
    "appId": "com.desktop-buddy.app",
    "productName": "Desktop Ball",
    "publish": null,
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon.png"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "assets/icon-512.png",
      "category": "public.app-category.entertainment"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icon.png",
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Desktop Ball"
    },
    "files": [
      "main.js",
      "index.html",
      "renderer.js",
      "style.css",
      "assets/icon-16x16.png",
      "assets/icon-32x32.png",
      "assets/icon.png",
      "assets/icon-512.png",
      "assets/red-ball.svg",
      "node_modules/**/*"
    ]
  },
  "dependencies": {
    "matter-js": "^0.20.0",
    "sharp": "^0.34.4"
  },
  "devDependencies": {
    "electron": "^38.2.0",
    "electron-builder": "^26.0.12"
  }
}
